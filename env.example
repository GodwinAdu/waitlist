# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/waitlist-saas
# For production use MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/waitlist-saas

# JWT Secret (MUST be changed in production - use a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Next.js Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000
# For production: https://yourdomain.com

# UploadThing Configuration (File Uploads)
UPLOADTHING_SECRET=sk_live_your_uploadthing_secret
UPLOADTHING_APP_ID=your_uploadthing_app_id

# Paystack Configuration (Ghana Cedis Payments)
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key
# For production use live keys: sk_live_xxx and pk_live_xxx

# Email Configuration (Optional but recommended for notifications)

# Option 1: Using Resend (Recommended)
RESEND_API_KEY=re_your_resend_api_key

# Option 2: Using SMTP (Gmail, Outlook, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
# Note: For Gmail, use App-Specific Password, not your regular password

